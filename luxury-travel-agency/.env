# Production Environment Configuration
# JSON Database - No PostgreSQL Required
# Copy this to .env for production deployment

# Server Configuration
PORT=3000
# Note: NODE_ENV is set by the platform, not in .env file
USE_JSON_DB=true

# API URL (leave empty for frontend-only, or set your backend URL)
VITE_API_BASE_URL=

# WhatsApp Contact Number
VITE_WHATSAPP_NUMBER=+447956375803

# Site Configuration
VITE_SITE_NAME=GOWRI TOURS
VITE_DEFAULT_LOCALE=en

# Analytics (set to true in production if using analytics)
VITE_ENABLE_ANALYTICS=true

# Allowed Hosts for deployment
VITE_ALLOWED_HOSTS=gowritours-main-5ed4e1e.kuberns.cloud

# Security Configuration
VITE_CSP_ENABLED=true
VITE_HSTS_ENABLED=true
VITE_FRAME_OPTIONS_ENABLED=true

# Performance Configuration
VITE_CACHE_MAX_AGE=3600
VITE_COMPRESSION_ENABLED=true
VITE_GZIP_LEVEL=9

# Database Configuration
VITE_DB_BACKUP_ENABLED=true
VITE_DB_BACKUP_INTERVAL=3600000

# Logging Configuration
VITE_LOG_LEVEL=info
VITE_LOG_FILE_ENABLED=true
VITE_LOG_FILE_PATH=./logs/app.log

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
VITE_CORS_ENABLED=true
VITE_CORS_ORIGIN=https://gowritours-main-5ed4e1e.kuberns.cloud
